inline Bool equals_to_vv(const @T1@ *v1, const @T2@ *v2, Long_I N)
{
    for (Long i = 0; i < N; ++i)
        if (v1[i] != v2[i])
            return false;
    return true;
}
//% if is_Qdoub(T1) || is_Qcomp(T1) || is_Qdoub(T2) || is_Qcomp(T2)
#endif
//% end

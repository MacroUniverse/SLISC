template <class T1, class T2>
inline void assert_same_shape(const T1 &v1, const T2 &v2, Int_I dim1, Int_I dim2)
{
#ifdef SLS_CHECK_SHAPE
    if (dim1 != dim2)
        SLS_ERR("wrong dimension!");
    if (v1.n0() != v2.n0())
        SLS_ERR("wrong shape!");
    if (dim1 > 1) {
        if (v1.n1() != v2.n1())
            SLS_ERR("wrong shape!");
        if (dim1 > 2) {
            if (v1.n2() != v2.n2())
                SLS_ERR("wrong shape!");
            if (dim1 > 3) {
                if (v1.n3() != v2.n3())
                    SLS_ERR("wrong shape!");
                if (dim1 > 4)
                    SLS_ERR("not implemented!");
            }
        }
    }
#endif
}

template <class T1, class T2, class T3>
inline void assert_same_shape(const T1 &v1, const T2 &v2, const T3 &v3, Int_I dim1, Int_I dim2, Int_I dim3)
{
    assert_same_shape(v1, v2, dim1, dim2);
    assert_same_shape(v1, v3, dim1, dim3);
}


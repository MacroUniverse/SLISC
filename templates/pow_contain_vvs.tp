//% [T, T1, Ts] = varargin{:};
inline void pow(@T@_O v, @T1@_I v1, @Ts@_I s)
{
#ifdef SLS_CHECK_SHAPE
    if (!shape_cmp(v, v1))
        SLS_ERR("wrong size!");
#endif
    pow_vvs(v.ptr(), v1.ptr(), s, v1.size());
}

//% types = {'Char'; 'Int'; 'Llong'; 'Doub';};
//%---------------------
//% T = varargin{:};
inline void num2str(Str_O str, @T@_I s)
{
    str = to_string(s);
    // erase trailing zeros
    if (str.find('.') != Str::npos)
        str.erase(str.find_last_not_of('0') + 1);
}

inline Str num2str(@T@_I s)
{
    Str str;
    num2str(str, s);
    return str;
}

// see if elm == vec[i], return i
// return -1 if not found
//% tem('search', {
//%     'Int', 'VecInt';
//%     'Llong', 'VecLlong';
//%     'Char', 'Str';
//%     'Char32', 'Str32';
//%     'Str', 'vecStr';
//%     'Str32', 'vecStr32';
//%     'Llong', 'vecLlong';
//% });
//%------------------------
//% [Ts, Tv] = varargin{:};
inline Long search(@Ts@_I s, @Tv@_I v, Long_I start = 0)
{
    Long N = v.size();
    for (Long i = start; i < N; ++i) {
        if (s == v[i])
            return i;
    }
    return -1;
}

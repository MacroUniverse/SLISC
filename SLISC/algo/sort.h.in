// quicksort (mature version)
// no recursion, use insertion sort for short array
// same interface with std::sort, also supports sorting 2 arrays
// ref: Numerical Recipes 3ed
//% tem('sortNR3', {
//%  'asc', 1; % ascending
//%  'des', 1; % descending
//%  'usr', 1; % user comparator
//%  'asc', 2; % do the same for v1
//%  'des', 2;
//%  'usr', 2;});
//%---------------------
//% [Order, Nv] = varargin{:};
//% if strcmp(Order, 'asc') && Nv == 1
template <class Tit>
inline void sort_NR3_v(Tit v, Long_I n)
//% elseif strcmp(Order, 'des') && Nv == 1
template <class Tit>
inline void sortd_NR3_v(Tit v, Long_I n)
//% elseif strcmp(Order, 'usr') && Nv == 1
template <class Tit, class Tcomp>
inline void sort_NR3_v(Tit v, Long_I n, Tcomp comp)
//% elseif strcmp(Order, 'asc') && Nv == 2
template <class Tit, class Tit1>
inline void sort_vv(Tit v, Tit1 v1, Long_I n)
//% elseif strcmp(Order, 'des') && Nv == 2
template <class Tit, class Tit1>
inline void sortd_vv(Tit v, Tit1 v1, Long_I n)
//% elseif strcmp(Order, 'usr') && Nv == 2
template <class Tit, class Tit1, class Tcomp>
inline void sort_vv(Tit v, Tit1 v1, Long_I n, Tcomp comp)
//% end
{
//% M = 7; NSTACK = 64;
	typename std::iterator_traits<Tit>::value_type e;
//% if Nv == 2
	typename std::iterator_traits<Tit1>::value_type e1;
//% end
	Long i, ir, j, k, jstack = -1, l = 0;
	Long istack[@NSTACK@];
	ir = n - 1;
	while(1) {
		if (ir - l < @M@) { // use insertion sort for short array
			for (j = l+1; j <= ir; j++) {
				e = v[j];
//% if Nv == 2
				e1 = v1[j];
//% end
				for (i = j - 1; i >= l; i--) {
//% if strcmp(Order, 'asc')
					if (!(e < v[i])) break;
//% elseif strcmp(Order, 'des')
					if (!(v[i] < e)) break;
//% else
					if (!comp(e, v[i])) break;
//% end
					v[i+1] = v[i];
//% if Nv == 2
					v1[i+1] = v1[i];
//% end
				}
				v[i+1] = e;
//% if Nv == 2
				v1[i+1] = e1;
//% end
			}
			if (jstack < 0) break;
			ir = istack[jstack--];
			l = istack[jstack--];
		}
		else {
			// medium of 3
			k = (l + ir) >> 1;
			swap(v[k], v[l+1]);
//% if Nv == 2
			swap(v1[k], v1[l+1]);
//% end
//% if strcmp(Order, 'asc')
			if (v[ir] < v[l]) {
//% elseif strcmp(Order, 'des')
			if (v[l] < v[ir]) {
//% else
			if (comp(v[ir], v[l])) {
//% end
				swap(v[l], v[ir]);
//% if Nv == 2
				swap(v1[l], v1[ir]);
//% end
			}
//% if strcmp(Order, 'asc')
			if (v[ir] < v[l+1]) {
//% elseif strcmp(Order, 'des')
			if (v[l+1] < v[ir]) {
//% else
			if (comp(v[ir], v[l+1])) {
//% end
				swap(v[l+1], v[ir]);
//% if Nv == 2
				swap(v1[l+1], v1[ir]);
//% end
			}
//% if strcmp(Order, 'asc')
			if (v[l+1] < v[l]) {
//% elseif strcmp(Order, 'des')
			if (v[l] < v[l+1]) {
//% else
			if (comp(v[l+1], v[l])) {
//% end
				swap(v[l], v[l+1]);
//% if Nv == 2
				swap(v1[l], v1[l+1]);
//% end
			}
			i = l+1;
			j = ir;
			e = v[l+1];
//% if Nv == 2
			e1 = v1[l+1];
//% end
			while (1) {
//% if strcmp(Order, 'asc')
				do i++; while (v[i] < e);
				do j--; while (e < v[j]);
//% elseif strcmp(Order, 'des')
				do i++; while (e < v[i]);
				do j--; while (v[j] < e);
//% else
				do i++; while (comp(v[i], e));
				do j--; while (comp(e, v[j]));
//% end
				if (j < i) break;
				swap(v[i], v[j]);
//% if Nv == 2
				swap(v1[i], v1[j]);
//% end
			}
			v[l+1] = v[j];
			v[j] = e;
//% if Nv == 2
			v1[l+1] = v1[j];
			v1[j] = e1;
//% end
			jstack += 2;
			if (jstack >= @NSTACK@) throw("NSTACK too small in sort.");
			if (ir - i + 1 >= j - l) {
				istack[jstack] = ir;
				istack[jstack-1] = i;
				ir = j - 1;
			}
			else {
				istack[jstack] = j - 1;
				istack[jstack-1] = l;
				l = i;
			}
		}
	}
}

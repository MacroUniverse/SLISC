// not optimized
//% tem('copy(cmat,obd)', { 'CmatDoub', 'CmobdDoub' });
//%-----------------------
//% [T, T1] = varargin{:};
inline void copy(@T@_O lhs, @T1@_I rhs)
{
//% req('assert_same_shape', {T, T1});
    assert_same_shape(lhs, rhs);
    for (Long j = 0; j < lhs.n1(); ++j)
        for (Long i = 0; i < lhs.n0(); ++i)
            lhs(i, j) = rhs(i, j);
}

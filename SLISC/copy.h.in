// copy initializer list to containers
//% tem('copy(v,ini)', { 'VecDoub'; 'VecQdoub'; 'VecComp'; 'CmatDoub'; 'CmatComp'; 'CmatQdoub'; 'SvecDoub'; 'ScmatDoub'; 'ScmatComp'; });
//%------------------------------
//% T = varargin{:}; Ts = val_t(T);
inline void copy(@T@_O v, const std::initializer_list<@Ts@> &v1)
{
    const @Ts@ *p1 = v1.begin();
    Long N = v1.size();
#ifdef SLS_CHECK_SHAPES
    if (v.size() != N)
        SLS_ERR("wrong shape!");
#endif
    for (Long i = 0; i < N; ++i)
        v[i] = p1[i];
}

//% types = {
//%     'CbandDoub', 'CmatDoub';
//%     'CmatDoub', 'CbandDoub';
//%     'CbandDoub', 'ScmatDoub';
//%     'ScmatDoub', 'CbandDoub';
//%     'CbandComp', 'CmatComp';
//%     'CmatComp', 'CbandComp';
//%     'CbandComp', 'ScmatComp';
//%     'ScmatComp', 'CbandComp';
//%     'CbandComp', 'ScmatDoub';
//%     'ScmatComp', 'CbandDoub';
//% };
//%------------------------------
//% [T1, T2] = varargin{:};
//% Ts1 = contain_type(T1); Ts2 = contain_type(T2);
//% SvecTs1 = ['Svec' Ts1]; SvecTs2 = ['Svec' Ts2];
//% if is_Cband(T1)
inline void copy(@T1@_O b, @T2@_I a)
{
#ifdef SLS_CHECK_SHAPE
    if (!shape_cmp(a, b))
        SLS_ERR("wrong shape!");
#endif
    Long N1 = a.n1(), N2 = a.n2();
    for (Long j = 0; j < N2; ++j) {
        @SvecTs1@ sli_b = slice1(b.cmat(), j);
        @SvecTs2@_c sli_a = slice1(a, j);
        Long k = b.idiag() - j;
        Long i_beg = max(Long(0), j - b.nup()), i_end = min(N1, j + b.nlow() + 1);
        for (Long i = i_beg; i < i_end; ++i)
            sli_b[k + i] = sli_a[i];
    }
}
//% else
inline void copy(@T1@_O a, @T2@_I b)
{
#ifdef SLS_CHECK_SHAPE
    if (!shape_cmp(a, b))
        SLS_ERR("wrong shape!");
#endif
    Long N1 = a.n1(), N2 = a.n2();
    for (Long j = 0; j < N2; ++j) {
        Long k = b.idiag() - j;
        Long i_beg = max(Long(0), j - b.nup()), i_end = min(N1, j + b.nlow() + 1);
        @SvecTs1@ sli_a = slice1(a, j);
        @SvecTs2@_c sli_b = slice1(b.cmat(), j);
        for (Long i = 0; i < i_beg; ++i)
            sli_a[i] = 0;
        for (Long i = i_beg; i < i_end; i++)
            sli_a[i] = sli_b[k + i];
        for (Long i = i_end; i < N1; ++i)
            sli_a[i] = 0;
    }
}
//% end

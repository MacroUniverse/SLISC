// copy dense matrix with different majors
// lda1 is leading dimension of a1, lda2 is leading dimension of a2
// if a1 is row major and a2 is column major, N1 is number of columns, N2 is number of rows
// if a1 is column major and a2 is row major, N1 is number of rows, N2 is number of columns
// #include "matcpy_diff_major.inl"

// === container interface ===
// must use pointer version
// scalar to container
//% tem('copy(v,s)', {
//% 'vecBool'; 'vecInt'; 'vecLlong';
//% 'VecChar'; 'VecInt'; 'VecLlong'; 'VecDoub'; 'VecComp';
//% 'SvecInt'; 'SvecLlong'; 'SvecDoub'; 'SvecComp';
//% 'DvecInt'; 'DvecLlong'; 'DvecDoub'; 'DvecComp';
//% 'vvecBool'; 'vvecInt'; 'vvecLlong';
//% 'CmatInt'; 'CmatLlong'; 'CmatDoub'; 'CmatComp';
//% 'MatInt'; 'VecQdoub'; 'MatDoub'; 'ScmatDoub'; 'ScmatComp';
//% 'Cmat3Int'; 'Cmat3Llong'; 'Cmat3Doub'; 'Cmat3Comp';
//% 'Mat3Doub'; 'Cmat3Doub'; 'Cmat4Doub'; });
//%-------------------------------------
//% T = varargin{:}; Ts = val_t(T);
//% req('vecset', {Ts});
inline void copy(@T@_O v, @Ts@_I s)
{
//% if is_vec(T)
    v.assign(v.size(), s);
//% elseif is_vvec(T)
    for (auto &v1 : v) v1.assign(v1.size(), s);
//% elseif is_VecBool(T)
    Long N = v.size();
    for (Long i = 0; i < N; ++i)
        v[i] = s;
//% elseif is_dense(T)
    vecset(v.p(), s, v.size());
//% elseif is_Dvec(T)
    vecset(v.p(), s, v.size(), v.step());
//% elseif is_Dcmat(T)
    Long N1 = v.n0(), N2 = v.n1();
    for (Long j = 0; j < N2; ++j)
        vecset(&v(0, j), s, N1);
//% elseif is_Dmat(T)
    Long N1 = v.n0(), N2 = v.n1();
    for (Long i = 0; i < N1; ++i)
        vecset(&v(i, 0), s, N2);
//% elseif ndim(T) == 3
    // slow
    if (v.size() != 0)
    for (Long k = 0; k < v.n2(); ++k)
        for (Long j = 0; j < v.n1(); ++j)
            for (Long i = 0; i < v.n0(); ++i)
                v(i, j, k) = s;
//% else
//%     error('not implemented!');
//% end
}

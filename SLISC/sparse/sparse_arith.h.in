//% [Ts, Ts1] = varargin{:};
inline Bool operator==(Cmobd@Ts@_I a, Cmobd@Ts1@_I b)
{
//% req('v==v', {['Cmat3' Ts], ['Cmat3' Ts1]});
	return a.n0() == b.n0() && a.n1() == b.n1() && a.cmat3() == b.cmat3();
}

inline Bool operator!=(Cmobd@Ts@_I a, Cmobd@Ts1@_I b) { return !(a == b); }

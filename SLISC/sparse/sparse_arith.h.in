//% tem('coo+=coo', {'Int'; 'Llong'; 'Doub'; 'Qdoub'; 'Comp'; 'Qcomp';});
//%----------------------------
//% T = varargin{:};
//% McooT = ['Mcoo', T];
//% VbaseT = ['Vbase', T];
//% VecT = ['Vec', T];
inline void operator+=(@McooT@_O coo, @McooT@_I coo1)
{
	Long Nnz = coo.nnz();
	coo.resize(Nnz + coo1.nnz());
	for (Long i = 0; i < coo1.nnz(); ++i) {
		Long ii = Nnz+i;
		coo[ii] = coo1[i];
		coo.row(ii) = coo1.row(i);
		coo.col(ii) = coo1.col(i);
	}
}

inline void operator-=(@McooT@_O coo, @McooT@_I coo1)
{
	Long Nnz = coo.nnz();
	coo.resize(Nnz + coo1.nnz());
	for (Long i = 0; i < coo1.nnz(); ++i) {
		Long ii = Nnz+i;
		coo[ii] = -coo1[i];
		coo.row(ii) = coo1.row(i);
		coo.col(ii) = coo1.col(i);
	}
}

//% tem('times_band', {
//%     'CbandComp', 'CbandComp', 'Doub';
//%     'CbandQcomp', 'CbandQcomp', 'Qdoub';
//% });
//%----------------------------
//% [Tv, Tv1, Ts] = varargin{:};
inline void times(@Tv@_O v, @Tv1@_I v1, @Ts@_I s)
{
//% req('assert_same_shape', {Tv, Tv1});
	assert_same_shape(v, v1);
	times(band(v), band(v1), s);
}

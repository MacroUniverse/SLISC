//% });
//%----------------------
//% T = varargin{:};
//% Ndim = num2str(ndim(T));
//% Ts = val_t(T);
//% numTs = num2str(type_num(Ts));
	    if (type == @numTs@ && Ndim == @Ndim@) {
//% if Ndim == '1'
	        @T@ v(0);
//% elseif Ndim == '2'
	        @T@ v(0, 0);
//% elseif Ndim == '3'
	        @T@ v(0, 0, 0);
//% elseif Ndim == '4'
	        @T@ v(0, 0, 0, 0);

//% });
//%----------------------
//% T = varargin{:};
//% numT = num2str(type_num(T));
	        if (type == @numT@) {
	            @T@ s;
	            load(s, name, matb); save(s, name, matt);
	            continue;
	        }
//%---------------------
	        SLS_ERR("not implemented!");
	    }

// containers
//% tem('matb2matt2', {
//%     'VecChar'; 'VecInt'; 'VecLlong'; 'VecDoub'; 'VecComp';
//%     'CmatInt'; 'CmatLlong'; 'CmatDoub'; 'CmatComp';
//%     'Cmat3Int'; 'Cmat3Llong'; 'Cmat3Doub'; 'Cmat3Comp';

			start2 < 0 || start2 + N2 > v.n2())
        SLS_ERR("index out of bound!");
#endif
//%     if is_dense_mat(Tv)
    @Tsli@_c sli(&v(start1, start2), N1, N2, v.n1());
//%     elseif is_Dcmat(Tv)
    @Tsli@_c sli(&v(start1, start2), N1, N2, v.lda());
//%     else
//%         error('not implemented (1)!');
//%     end

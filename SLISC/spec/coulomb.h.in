#ifdef SLS_USE_GSL
// === coulomb phase shift ===
inline Doub coulomb_sigma(Int_I l, Doub_I eta)
{
	if (eta > 0)
		SLS_ERR("are you sure?");
	gsl_sf_result lnr, arg;
	if (gsl_sf_lngamma_complex_e(l + 1, eta, &lnr, &arg) == GSL_ELOSS)
		SLS_ERR("arg has loss!");
	return arg.val;
}
#endif

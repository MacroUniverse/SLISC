//% tem('arb_coulomb_sigma', {
//%   'Doub' 'Comp'
//%   'Qdoub' 'Qcomp'});
//%---------------------------------
//% [Tr,Tc] = varargin{:};
inline @Tr@ arb_coulomb_sigma(@Tr@_I l, @Tr@_I eta)
{
	if (eta > 0)
		SLS_ERR("are you sure?");
	return imag(arb_lngamma(@Tc@(l + 1, eta)));
}

//% tem('sqr', {'Char'; 'Int'; 'Llong'; 'Doub'; 'Comp';});
//%-----------------------------------
//% T = varargin{:};
inline @T@ sqr(@T@_I a) { return a * a; }
//%------------------------

//% tem('abs2', {'Int'; 'Doub'; 'Comp'; });
//%-------------------------------
//% T = varargin{:};
//% if is_real(T)
inline @T@ abs2(@T@_I a) { return a * a; }
//% elseif is_comp(T)
//%     Tr = rm_comp(T);
inline @Tr@ abs2(@T@_I &a) { return sqr(real(a)) + sqr(imag(a)); }
//% end

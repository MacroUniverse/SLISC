//% tem('linspace_vss', { 'Doub' });
//%-----------------------
//% T = varargin{:};
inline void linspace_vss(@T@ *v, @T@_I first, @T@_I last, Long N)
{
//% if is_integral(T)
    @T@ delta = (last - first), Nm1 = N-1;
    for (Long i = 0; i < N; ++i)
        v[i] = first + delta * i / Nm1;
//% else
    @T@ delta = (last - first) / (N - 1);
    for (Long i = 0; i < N; ++i)
        v[i] = first + delta * i;
//% end
}
//%-------------------------

//% tem('linspace', {
//% 'vecInt'; 'vecLlong'; 'vecDoub';
//% 'VecInt'; 'VecLlong'; 'VecDoub'; 'VecComp';
//% 'CmatInt'; 'CmatDoub'; 'CmatComp';
//% 'Cmat4Int'; 'ScmatInt';
//% 'MatInt'; 'MatComp';
//% 'Cmat3Doub'; 'Cmat3Doub'
//% });
//%---------------------------------
//% Tv = varargin{:};
//% Ts = val_t(Tv);
//% if ~is_dense(Tv)
//%     error('illegal types');
//% end
//% req('linspace_vss', {Ts});
inline void linspace(@Tv@_O v, @Ts@_I first, @Ts@_I last)
//% if is_vector(Tv)
{ linspace_vss(v.data(), first, last, v.size()); }
//% else
{ linspace_vss(v.p(), first, last, v.size()); }
//% end

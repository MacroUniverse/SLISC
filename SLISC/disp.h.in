// for vector of string
inline void disp(vecStr_I v)
{
    Long N = v.size();
    for (Long i = 0; i < N; ++i)
        cout << v[i] << endl;
}

inline void disp(vecStr32_I v)
{
    Long N = v.size();
    for (Long i = 0; i < N; ++i)
        cout << utf32to8(v[i]) << endl;
}

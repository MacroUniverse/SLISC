//% Tu = ['Vec' contain_type(Tv)];
inline void reorder(@Tv@_O v, @To@_I order)
{
    Long N = v.size();
#ifdef SLS_CHECK_SHAPE
    if (order.size() != N)
        SLS_ERR("wrong shape!");
#endif
    static @Tu@ u(N);
	if (N > u.size())
		u.resize(max(N, 2*u.size()));
    for (Long i = 0; i < N; ++i)
        u[i] = v[order[i]];
    for (Long i = 0; i < N; ++i)
        v[i] = u[i];
}

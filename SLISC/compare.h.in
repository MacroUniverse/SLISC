//%------------------------
//% T = varargin{:};
//% if is_Qdoub(T) || is_Qcomp(T)
#ifdef SLS_USE_QUAD_MATH
//% end
inline Bool equals_to_vs(const @T@ *v, @T@_I s, Long_I N)
{
    for (Long i = 0; i < N; ++i)
        if (v[i] != s)
            return false;
    return true;
}
//% if is_Qdoub(T) || is_Qcomp(T)
#endif
//% end

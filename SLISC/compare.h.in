#ifdef SLS_USE_QUAD_MATH
//% end
inline void assert_same_shape(@T1@_I v1, @T2@_I v2)
{
#ifdef SLS_CHECK_SHAPES
//% req('shape_cmp0', {T1, T2});
    if (!shape_cmp(v1, v2))
        SLS_ERR("wrong shape!");
#endif
}
//% if is_Qdoub(Ts1) || is_Qdoub(Ts2) || is_Qcomp(Ts1) || is_Qcomp(Ts2)
#endif
//% end

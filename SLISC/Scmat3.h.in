#pragma once
#include "Svec.h"

namespace slisc {
//% types = {
//%     'Char', true;   'Char', false;
//%     'Int', true;    'Int', false;
//%     'Llong', true;  'Llong', false;
//%     'Long', true;  'Long', false;
//%     'Float', true;  'Float', false;
//%     'Doub', true;   'Doub', false;
//%     'Ldoub', true;  'Ldoub', false;
//%     'Fcomp', true;  'Fcomp', false;
//%     'Comp', true;   'Comp', false;
//%     'Lcomp', true;  'Lcomp', false;
//%     'Fimag', true;  'Fimag', false;
//%     'Imag', true;   'Imag', false;
//%     'Limag', true;  'Limag', false;
//% };
//%------------------------
//% [T, constness] = varargin{:};
//% SvecT = ['Svec' T];
//% SvecT_c = [SvecT '_c'];
//% Scmat3T = ['Scmat3' T];
//% Scmat3T_c = [Scmat3T '_c'];
//% if constness
//%     CT = ['const ' T];
//%     Base = SvecT_c;
//%     Class = Scmat3T_c;
//% else
//%     CT = T;
//%     Base = SvecT;
//%     Class = Scmat3T;
//% end
//% if is_Long(T) && constness
#ifdef SLS_USE_INT_AS_LONG
typedef Scmat3Int_c Scmat3Long_c;
#else
typedef Scmat3Llong_c Scmat3Long_c;
#endif
//% elseif is_Long(T) && ~constness
#ifdef SLS_USE_INT_AS_LONG
typedef Scmat3Int Scmat3Long;
#else
typedef Scmat3Llong Scmat3Long;
#endif
//% else
class @Class@ : public @Base@
{
protected:
    Long m_N1, m_N2, m_N3;
public:
    @Class@();
    @Class@(@CT@ *data, Long_I N1, Long_I N2, Long_I N3);

//% if ~constness
    operator @Scmat3T_c@() const;
//% end

    // === Cmat functions ===
    @CT@& operator()(Long_I i, Long_I j, Long_I k) const;
    Long n1() const;
    Long n2() const;
    Long n3() const;

    // resize() is a bad idea, don't try to create it!
    void reshape(Long_I N1, Long_I N2, Long_I N3);
    void set(@CT@ *data, Long_I N1, Long_I N2, Long_I N3);
    void set(const @Class@ &sli);
    ~@Class@();
};

inline @Class@::@Class@() {}

inline @Class@::@Class@(@CT@ *data, Long_I N1, Long_I N2, Long_I N3)
    : @Base@(data, N1*N2*N3), m_N1(N1), m_N2(N2), m_N3(N3) {}

//% if ~constness
inline @Class@::operator @Scmat3T_c@() const
{
    return *((@Scmat3T_c@ *)this);
}
//% end

inline @CT@ & @Class@::operator()(Long_I i, Long_I j, Long_I k) const
{
#ifdef SLS_CHECK_BOUNDS
    if (i < 0 || i >= m_N1 || j < 0 || j >= m_N2 || k < 0 || k >= m_N3)
        SLS_ERR("Matrix subscript out of bounds");
#endif
    return m_p[i + m_N1*j + m_N1*m_N2*k];
}

inline Long @Class@::n1() const
{
    return m_N1;
}

inline Long @Class@::n2() const
{
    return m_N2;
}

inline Long @Class@::n3() const
{
    return m_N3;
}

inline void @Class@::reshape(Long_I N1, Long_I N2, Long_I N3)
{
#ifdef SLS_CHECK_SHAPES
    if (N1*N2*N3 != m_N)
        SLS_ERR("illegal reshape!");
#endif
    m_N1 = N1; m_N2 = N2; m_N3 = N3;
}

inline void @Class@::set(@CT@ *data, Long_I N1, Long_I N2, Long_I N3)
{
    @Base@::set(data, N1*N2*N3);
    m_N1 = N1; m_N2 = N2; m_N3 = N3;
}

inline void @Class@::set(const @Class@ &sli)
{
    @Base@::set(sli);
    m_N1 = sli.m_N1; m_N2 = sli.m_N2; m_N3 = sli.m_N3;
}

inline @Class@::~@Class@() {}
//% end

//% if constness
typedef const @Class@ & @Scmat3T@_I;
//% else
typedef const @Class@ & @Scmat3T@_O, & @Scmat3T@_IO;
//% end
//%------------------------
} // namespace slisc

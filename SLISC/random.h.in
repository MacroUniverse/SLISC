inline void rand(@T@_O v)
{
    Long i, N = v.size();
    for (i = 0; i < N; ++i)
//% if is_Llong(Ts)
        v[i] = randLong(N);
//% elseif is_Doub(Ts)
        v[i] = randDoub();
//% elseif is_Qdoub(Ts)
        v[i] = randQdoub();
//% elseif is_Comp(Ts)
        v[i] = randComp();
//% elseif is_Qcomp(Ts)
        v[i] = randQcomp();
//% end
}

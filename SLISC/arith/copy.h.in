//% tem('copy(band,s)', { 'CbandDoub'; 'CbandQdoub' });
//%------------------------------
//% T = varargin{:}; Ts = val_t(T);
//% DcmatTs = ['Dcmat' Ts];
@DcmatTs@ band(@T@_IO);
@DcmatTs@C band(@T@_I);

// b^n that output an integer 
//% tem('pow', { 'Int', 'Llong' });
//%---------------------
//% T = varargin{:};
inline @T@ pow(@T@ b, Uint n) {
    @T@ r = 1;
    while (n > 0) {
        if (n & 1) {
            r *= b;
        }
        b *= b; n >>= 1;
    }
    return r;
}

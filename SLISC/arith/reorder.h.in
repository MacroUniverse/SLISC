//% tem('trans', { 'ScmatInt';
//%     'ScmatDoub'; 'ScmatQdoub'; 'DcmatDoub'; 'DcmatQdoub';
//% });
//%--------------------------
//% T = varargin{:};
//% Ts = val_t(T);
inline void trans(@T@_IO v)
{
#ifdef SLS_CHECK_SHAPES
	if (v.n0() != v.n1())
		SLS_ERR("illegal shape!");
#endif
	for (Long i = 0; i < v.n0(); ++i)
		for (Long j = 0; j < i; ++j)
			swap(v(i, j), v(j, i));
}
//%-------------------------

//% tem('trans(v,v)', {
//%   'ScmatInt' 'ScmatInt';
//%   'ScmatLlong' 'ScmatLlong';
//%   'ScmatDoub' 'ScmatDoub';
//%   'ScmatQdoub' 'ScmatQdoub';
//%   'ScmatComp' 'ScmatComp';
//%   'ScmatQcomp' 'ScmatQcomp';
//%   'MatComp' 'ScmatComp'
//%   'ScmatDoub' 'ScmatDoub';
//%   'ScmatQdoub' 'ScmatQdoub';
//%   'ScmatComp' 'ScmatComp';
//%   'ScmatQcomp' 'ScmatQcomp'; });
//%--------------------------
//% [T, T1] = varargin{:};
//% [Ts,Ts1] = val_t(T,T1);
inline void trans(@T@_O v, @T1@_I v1)
{
#ifdef SLS_CHECK_SHAPES
	if (v.n0() != v1.n1() || v.n1() != v1.n0())
		SLS_ERR("wrong shape!");
#endif
	for (Long i = 0; i < v.n0(); ++i)
		for (Long j = 0; j < v.n1(); ++j)
			v(i, j) = v1(j, i);
}
//%-------------------------

//% tem('her(v)', { 'ScmatComp' });
//%--------------------------
//% T = varargin{:}; Ts = val_t(T);
//% if ~(is_comp(Ts) && ndim(T) == 2)
//%     error('error types!');
//% end
inline void her(@T@_IO v)
{
#ifdef SLS_CHECK_SHAPES
	if (v.n0() != v.n1()) SLS_ERR("illegal shape!");
#endif
//% req('trans', {T}); req('conj', {T});
	trans(v); conj(v);
}
//%---------------------------

//% tem('her(v,v)', {
//%    'ScmatComp' 'ScmatComp'
//%    'ScmatComp' 'MatComp'
//%    'MatComp' 'ScmatComp'
//% 'DcmatComp' 'DcmatComp' });
//%--------------------------
//% [T, T1] = varargin{:};
//% req('trans(v,v)', {T,T1}); req('conj', {T});
inline void her(@T@_O v, @T1@_I v1)
{ trans(v, v1); conj(v); }

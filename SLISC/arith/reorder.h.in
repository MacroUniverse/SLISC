//% tem('reorder', {
//%     'SvecInt' 'SvecInt';
//%     'SvecLlong' 'SvecLlong';
//%     'SvecDoub' 'SvecLlong';
//%     'SvecQdoub' 'SvecLlong';
//%     'SvecComp' 'SvecLlong';
//%     'SvecQcomp' 'SvecLlong';
//%     'vecStr' 'vecLlong';
//%     'vecStr32' 'vecLlong';
//% });
//%---------------------
//% [Tv, To] = varargin{:};
//% if ~is_vecStr(Tv) && ~is_vecStr32(Tv)
//%     Twsp = ['Vec' val_t(Tv)];
//% else
//%     Twsp = Tv;
//% end
inline void reorder(@Tv@_O v, @To@_I order)
{
#ifdef SLS_CHECK_SHAPES
	if ((Long)order.size() != (Long)v.size())
		SLS_ERR("wrong shape!");
#endif
	Long N = v.size();
	thread_local static @Twsp@ u; u.resize(N);
	if (N > (Long)u.size())
		u.resize(max(N, Long(2*u.size())));
	for (Long i = 0; i < N; ++i)
		u[i] = v[order[i]];
	for (Long i = 0; i < N; ++i)
		v[i] = u[i];
}

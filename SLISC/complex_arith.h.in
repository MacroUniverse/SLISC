//% T = promo_type(T1,T2);
inline @T@ operator+(@T1@_I s1, @T2@_I s2)
{
//% if is_real(T1)
    return @T@(s1 + real(s2), imag(s2));
//% elseif is_real(T2)
    return @T@(real(s1) + s2, imag(s1));
//% elseif type_num(T1) > type_num(T2)
    return s1 + (@T@)s2;
//% elseif type_num(T2) > type_num(T1)
    return (@T@)s1 + s2;
//% else
//%     error('not implemented!');
//% end
}

inline @T@ operator-(@T1@_I s1, @T2@_I s2)
{
//% if is_real(T1)
    return @T@(s1 - real(s2), -imag(s2));
//% elseif is_real(T2)
    return @T@(real(s1) - s2, imag(s1));
//% elseif type_num(T1) > type_num(T2)
    return s1 - (@T@)s2;
//% elseif type_num(T2) > type_num(T1)
    return (@T@)s1 - s2;
//% else
//%     error('not implemented!');
//% end
}

inline @T@ operator*(@T1@_I s1, @T2@_I s2)
{
//% if is_real(T1)
    return @T@(s1*real(s2), s1*imag(s2));
//% elseif is_real(T2)
    return @T@(real(s1)*s2, imag(s1)*s2);
//% elseif type_num(T1) > type_num(T2)
    return s1 * (@T@)s2;
//% elseif type_num(T2) > type_num(T1)
    return (@T@)s1 * s2;
//% else
//%     error('not implemented!');
//% end
}

